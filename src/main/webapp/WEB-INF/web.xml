<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>Task12</servlet-name>
        <jsp-file>Task12/Task12.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>Task12</servlet-name>
        <url-pattern>/Task12</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Task12Info</servlet-name>
        <jsp-file>Task12/Task12Info.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>Task12Info</servlet-name>
        <url-pattern>/Task12Info</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>login</servlet-name>
        <jsp-file>LoginForm.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/LoginForm</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>task6</servlet-name>
        <jsp-file>Task6.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>task6</servlet-name>
        <url-pattern>/Task6</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>register</servlet-name>
        <jsp-file>RegisterForm.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>register</servlet-name>
        <url-pattern>/RegisterForm</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>home</servlet-name>
        <jsp-file>home.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>home</servlet-name>
        <url-pattern>/home</url-pattern>
    </servlet-mapping>

    <filter>
        <filter-name>Hello Filter</filter-name>
        <filter-class>Filter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>Hello Filter</filter-name>
        <url-pattern>/home</url-pattern>
    </filter-mapping>

    <error-page>
        <exception-type>java.lang.Throwable</exception-type>
        <location>/Error.jsp</location>
    </error-page>

</web-app>